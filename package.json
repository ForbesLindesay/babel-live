{
  "name": "babel-live",
  "version": "4.0.2",
  "description": "Live reloading of servers compiled via babel",
  "files": [
    "index.js",
    "lib/index.js"
  ],
  "dependencies": {
    "babel-core": "^6.3.26",
    "chokidar": "^1.4.1",
    "mkdirp": "^0.5.1",
    "resolve": "^1.1.6",
    "source-map-support": "^0.4.8"
  },
  "devDependencies": {
    "babel-cli": "*",
    "babel-preset-forbeslindesay": "*",
    "eslint": "*",
    "eslint-config-forbeslindesay": "*",
    "testit": "^2.1.2"
  },
  "scripts": {
    "prepublish": "npm run build && npm run lint",
    "build": "babel src --out-dir lib",
    "lint": "eslint src",
    "test": "eslint src && babel-node test/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ForbesLindesay/babel-live.git"
  },
  "license": "MIT"
}